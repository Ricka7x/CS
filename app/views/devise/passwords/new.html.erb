<div class="container-fluid container-fill-height">
  <div class="container-content-middle">

			<%= form_for(resource, :html => {class: "m-x-auto text-center app-login-form", method: :post }, as: resource_name, url: password_path(resource_name)) do |f| %>
						
						<%= image_tag 'brand', class: 'app-brand m-b-lg' %>

			  		<div class="form-group">
			          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
			       </div>

			        <div class="m-b-lg">
			          <%= f.submit "Send me password instructions", class: 'btn btn-primary' %>
			        </div>

			         <footer class="screen-login">
			          <%= render "devise/shared/links" %>
			        </footer>
			<% end %>
</div>
</div>


