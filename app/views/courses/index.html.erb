
<div class="container ">
	<h2><small>Latest Courses</small></h2>
	<div class="m-t-sm">
		<div class="row">
	  <% @courses.each do |course| %>
	    	<div class="col-md-3">
	    		<div class="panel panel-default panel-profile">
		        <div class="panel-heading"><%= image_tag course.image, class: 'img-responsive' %></div>
		        <div class="panel-body text-center">
		          <h5 class="panel-title"><%= course.name %></h5>
		          <p class="m-b-md"><%= course.content %></p>
		          <%= link_to course do %>
			          <button class="btn btn-primary-outline btn-sm">
			             Learn More
			          </button>
		          <% end %>
		        </div>
		      </div>
		    </div>
    <% end %>
  </div>
	</div>
</div>
